# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.MainController.index

# Select a playlist to create a sequel for
GET     /select-playlist/           controllers.MainController.selectPlaylist(code: Option[String])

# Create and display the generated playlist
GET     /create-playlist/           controllers.MainController.createPlaylist(refreshToken: Option[String], playlistId: Option[String])

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
