# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.MainController.index

# Select a playlist to create a sequel for
GET     /select-playlist            controllers.MainController.selectPlaylist(code: String)

# Create and display the generated playlist
GET     /create-playlist            controllers.MainController.createPlaylist(accessToken: String, playlistId: String)

# About the site
GET     /about                      controllers.MainController.about()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /favicon.ico                controllers.Assets.at(path="/public/images", file="favicon.png")
